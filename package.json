{
  "name": "karabiner-ts-config",
  "version": "0.8.1",
  "description": "TypeScript Builder for Karabiner Elements configuration",
  "author": {
    "name": "RazgrizHsu",
    "email": "dev@raz.tw"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "karabiner-ts-config": "./dist/bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "example": "node dist/bin/cli.js ./example/raz.ts ./test.json -y",
    "raz": "npm run build && node dist/bin/cli.js ./example/raz.ts -y"
  },
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.1"
  },
  "keywords": [
    "karabiner",
    "keyboard",
    "config",
    "typescript",
    "builder"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RazgrizHsu/karabiner-ts-config.git"
  }
}
