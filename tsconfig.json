{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",

		"outDir": "dist",
		"sourceMap": false,
		"declaration": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"paths": {
			"karabiner-ts-config": ["./src/index"]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"example/wrong.ts"
	]
}
